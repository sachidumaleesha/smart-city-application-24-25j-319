generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  MEMBER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  clerkId   String?  @unique
  firstName String?
  lastName  String?
  email     String   @unique
  role      UserRole @default(MEMBER)
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BinFillLevel {
  id          String   @id @default(cuid())
  binType     String   // "paper", "plastic", "organic", "glass"
  distance    Float    // Distance in cm
  fillPercent Float    // Fill percentage (0-100)
  binHeight   Float    // Height of the bin in cm
  isAlert     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
